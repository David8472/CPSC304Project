<?php
	$con=mysqli_connect("localhost","root","");
	// Check connection
	if (mysqli_connect_errno()){
	  echo "<br />Failed to connect to MySQL: " . mysqli_connect_error();
	}

	mysqli_query($con,"INSERT INTO Items (callNumber, title, year, publisher, category)
	VALUES($_POST['callNumber'], $_POST['title'], $_POST['year'], $_POST['publisher'], $_POST['category'])");

	mysqli_query($con,"INSERT INTO ItemCopy(callNumber. copyNo, name)
	VALUES($_POST['callNumber'], $_POST['copyNo'], $_POST['name'])");
?>
